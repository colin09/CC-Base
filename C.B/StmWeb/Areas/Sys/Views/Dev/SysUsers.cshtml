@{
    ViewData["Title"] = "Index";
}

<div class="card"  ng-controller="mgrDevCtl">
    <div class="card-body">
        <h4 class="card-title">{{Title}}</h4>
        <p>名字 : <input type="text" ng-model="name"></p>
 	    <h1>Hello {{name}}</h1>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>UserName</th>
                        <th>TrueName</th>
                        <th>Department</th>
                        <th>AuthType</th>
                        <th>State</th>
                        <th>CreateTime</th>
                        <th>UpdateTime</th>
                        <th>IsDeleted</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in UserList">
                        <td ng-bind="item.Id">Id</td>
                        <td ng-bind="item.UserName">UserName</td>
                        <td ng-bind="item.TrueName">TrueName</td>
                        <td ng-bind="item.Department">Department</td>
                        <td ng-bind="item.AuthType">AuthType</td>
                        <td ng-bind="item.State">State</td>
                        <td ng-bind="item.CreateTime">CreateTime</td>
                        <td ng-bind="item.UpdateTime">UpdateTime</td>
                        <td ng-bind="item.IsDeleted">IsDeleted</td>
                    </tr>
                     <tr>
                        <td>+</td>
                        <td><input type="text" ng-model="newUser.UserName" /></td>
                        <td><input type="text" ng-model="newUser.TrueName" /></td>
                        <td><input type="text" ng-model="newUser.Department" /></td>
                        <td>state:1</td>
                        <td>
                            <select ng-model="newUser.AuthType">
                                <option value="1">develop</option>
                                <option value="2">admin</option>
                                <option value="3">user</option>
                            </select>
                        </td>
                        <td colspan="3">
                            <button ng-click="AddNewUser()"> + NEW </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


