@{
    Layout = null;
    ViewData["Title"] = "登录";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="~/mgr/css/style.css" />
    <link rel="stylesheet" href="~/mgr/css/materialdesignicons.min.css">
    <style>
        .auth.auth-bg-1 {
            background: url(../../mgr/images/login.jpg);
            background-size: cover;
        }
    </style>
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper auth-page">
            <div class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
                <div class="row w-100">
                    <div class="col-lg-4 mx-auto">
                        <div class="auto-form-wrapper">
                            @*<form action="Sys/Login/SignIn" method="post">*@
                                <div class="form-group">
                                    <label class="label">用户名：</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="userName" id="userName" placeholder="Username">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="label">密码：</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" name="password" id="password" placeholder="*********">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary submit-btn btn-block" id="btnLogin">Login</button>
                                </div>
                                <div class="form-group d-flex justify-content-between">
                                    @*<div class="form-check form-check-flat mt-0">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input" checked=""> Keep me signed in / 7天内免登录
                                                <i class="input-helper"></i>
                                            </label>
                                        </div>*@
                                    <a href="findPassword.html" class="text-small forgot-password text-black">忘记密码？</a>
                                </div>
                                @*<div class="form-group">
                                        <button class="btn btn-block g-login">
                                            <img class="mr-3" src="./login_files/icon-google.svg" alt="">Log in with Google
                                        </button>
                                    </div>
                                    <div class="text-block text-center my-3">
                                        <span class="text-small font-weight-semibold">Not a member ?</span>
                                        <a href="register.html" class="text-black text-small">Create new account</a>
                                    </div>*@
                            @*</form>*@
                        </div>
                        <ul class="auth-footer">
                            <li>
                                <a href="http://demo.cssmoban.com/cssthemes5/twts_144_StarAdmin/pages/samples/login.html#">Conditions</a>
                            </li>
                            <li>
                                <a href="http://demo.cssmoban.com/cssthemes5/twts_144_StarAdmin/pages/samples/login.html#">Help</a>
                            </li>
                            <li>
                                <a href="http://demo.cssmoban.com/cssthemes5/twts_144_StarAdmin/pages/samples/login.html#">Terms</a>
                            </li>
                        </ul>
                        <p class="footer-text text-center">copyright © 2018 Bootstrapdash. All rights reserved.</p>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        $(function () {
            $(btnLogin).click(function () {
                var userName = $("#userName").val();
                var password = $("#password").val();

                $.post("../Login/SignIn", { userName: userName, password: password }).done(function (response) {
                    if (response.success)
                        window.location.href = "../../Sys/Manager/Index";
                    console.log(response);
                    console.log(response.success);
                });

            });

        });
    </script>

</body>
</html>
